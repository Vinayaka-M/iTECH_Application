@model iTECH_Application.Models.CategoryModel
@{
    ViewData["Title"] = "Create Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Add Category</h1>
                    @*<p class="text-center text-danger">@TempData["message"]</p>*@
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Category" asp-action="CreateCategory">
                        <div class="form-group">
                            <label asp-for="category">Category Name</label>
                            <input type="text" asp-for="category" class="form-control" placeholder="Enter Category" />
                            <span asp-validation-for="category" class="text-danger"></span>
                        </div>




                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-sm btn-outline-success float-right" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>



